# Backend Environment Template
# Copy to .env and fill secrets before running `npm run dev`

PORT=4000
ALLOWED_ORIGINS=http://localhost:5173

# Firebase Admin Credentials
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nABC...\n-----END PRIVATE KEY-----\n"

# Stripe Billing
STRIPE_API_KEY=sk_test_your_secret
STRIPE_PRICE_TIER_A=price_1234567890
STRIPE_PRICE_TIER_B=price_0987654321
STRIPE_SUCCESS_URL=http://localhost:5173/?billing=success
STRIPE_CANCEL_URL=http://localhost:5173/?billing=cancel
STRIPE_PORTAL_RETURN_URL=http://localhost:5173/?portal=done

# Billing Alerts
BILLING_ALERT_RECIPIENT_UIDS=

# Observability
SENTRY_DSN=https://public@sentry.io/12345
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Misc
LOG_LEVEL=info
