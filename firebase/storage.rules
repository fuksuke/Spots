rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /spots/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /comments/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /avatars/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
