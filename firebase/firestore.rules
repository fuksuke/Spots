rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /spots/{spotId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.owner_id;
    }

    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.user_id;
    }

    match /likes/{likeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
      allow delete: if request.auth != null && resource.data.user_id == request.auth.uid;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId &&
        !('phone_verified' in request.resource.data) &&
        !('phone_verified_at' in request.resource.data) &&
        !('phone_hash' in request.resource.data);
      allow update: if request.auth != null && request.auth.uid == userId && phoneVerificationFieldsUnchanged();
      allow delete: if false;
    }

    function phoneVerificationFieldsUnchanged() {
      return
        (request.resource.data.phone_verified == resource.data.phone_verified) &&
        (request.resource.data.phone_verified_at == resource.data.phone_verified_at) &&
        (request.resource.data.phone_hash == resource.data.phone_hash);
    }

    match /comment_likes/{likeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
      allow delete: if request.auth != null && resource.data.user_id == request.auth.uid;
    }

    match /leaderboards/{leaderboardId}/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    match /scheduled_spots/{spotId} {
      allow create: if request.auth != null && request.resource.data.owner_id == request.auth.uid;
      allow read: if request.auth != null && (request.auth.uid == resource.data.owner_id || request.auth.token.admin == true);
      allow update: if request.auth != null && request.auth.uid == resource.data.owner_id;
      allow delete: if request.auth != null && request.auth.uid == resource.data.owner_id;

      allow update: if request.auth != null && request.auth.token.admin == true;
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }

    match /promotions/{promotionId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
